# https://editorconfig.org
root = true

[*] # 表示所有文件适用
charset = utf-8 # 文件编码
end_of_line = lf # 换行符
indent_size = 2 # 缩进大小
indent_style = tab # 缩进风格
insert_final_newline = true # 始终在文件末尾插入一个新行
max_line_length = 130 # 最大行长度
trim_trailing_whitespace = true # 关闭末尾空格

[*.md]
max_line_length = 0 # 关闭最大行长度限制
trim_trailing_whitespace = false # 关闭末尾空格修剪

[COMMIT_EDITMSG]
max_line_length = 0
